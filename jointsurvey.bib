file = {:Users/jason/Documents/Mendeley Desktop/Guillera-Arroita, Lahoz-Monfort - 2012 - Designing studies to detect differences in species occupancy Power analysis under imperfect det.pdf:pdf},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Hypothesis testing,Likelihood-ratio test,Multiple-season occupancy,Sample size,Survey design,Wald test},
