journal = {Methods in Ecology and Evolution},
keywords = {Bayesian inference,citizen science,exchange algorithm,geostatistics,imperfect detection,occupancy},
number = {6},
pages = {1626--1637},
title = {{Integrating auxiliary data in optimal spatial design for species distribution modelling}},
volume = {9},
year = {2018}
}
