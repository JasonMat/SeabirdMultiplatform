issn = {00063207},
journal = {Biological Conservation},
keywords = {Foraging range,Habitat modelling,Kernel density estimation,Little tern Sternula albifrons,Radio telemetry,Special Protection Area (SPA)},
pages = {729--738},
publisher = {Elsevier Ltd},
title = {{Use of multiple data sources and analytical approaches to derive a marine protected area for a breeding seabird}},
url = {http://dx.doi.org/10.1016/j.biocon.2015.08.031},
