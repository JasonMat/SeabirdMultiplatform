isbn = {0012-9658},
issn = {0012-9658},
keywords = {environment relationships,landscape context,omitted variable bias,scale,spatial autocorrelation,spatial regression,spatially lagged predictor,species},
number = {8},
pages = {2455--2465},
pmid = {20836467},
title = {{Spatial autocorrelation and the scaling of species — environment relationships Published by : Ecological Society of America Linked references are available on JSTOR for this article : Your use of the JSTOR archive indicates your acceptance of the Terms {\&}}},
