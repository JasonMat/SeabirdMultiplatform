issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Poisson point processes,Southern Ocean Mollusca,presence-only data,presence–absence data,sampling bias,species distribution models,stochastic simulation},
number = {7},
pages = {1002--1014},
title = {{Reliable species distributions are obtainable with sparse, patchy and biased data by leveraging over species and data types}},
volume = {10},
